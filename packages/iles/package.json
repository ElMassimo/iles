{
  "name": "iles",
  "description": "Vite & Vue powered static site generator with partial hydration",
  "version": "0.0.1",
  "main": "dist/node/index.js",
  "typings": "types/index.d.ts",
  "bin": {
    "iles": "bin/iles.js"
  },
  "files": [
    "bin",
    "lib",
    "dist",
    "types"
  ],
  "scripts": {
    "dev": "npm run dev-shared && npm run dev-start",
    "dev-start": "run-p dev-client dev-node dev-watch",
    "dev-client": "tsc -w -p src/client",
    "dev-node": "tsc -w -p src/node",
    "dev-shared": "node scripts/copyShared",
    "dev-watch": "node scripts/watchAndCopy",
    "build": "rimraf -rf dist && node scripts/copyShared && tsc -p src/client && tsc -p src/node && node scripts/copyClient"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "keywords": [
    "vite",
    "vue",
    "islands",
    "ssg"
  ],
  "author": "MÃ¡ximo Mussini",
  "license": "MIT",
  "homepage": "https://github.com/ElMassimo/iles",
  "bugs": {
    "url": "https://github.com/ElMassimo/iles/issues"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^1.6.0",
    "@vitejs/plugin-vue-jsx": "^1.1.8",
    "@vue/compiler-sfc": "^3.2.11",
    "@vue/server-renderer": "^3.2.11",
    "chalk": "^4.1.1",
    "debug": "^4.3.2",
    "diacritics": "^1.3.0",
    "escape-html": "^1.0.3",
    "es-module-lexer": "^0.7.1",
    "fs-extra": "^10.0.0",
    "globby": "^11.0.3",
    "gray-matter": "^4.0.3",
    "lru-cache": "^6.0.0",
    "minimist": "^1.2.5",
    "ora": "^5.4.0",
    "polka": "^0.5.2",
    "vite": "^2.5.0",
    "vue": "^3.2.11"
  },
  "devDependencies": {
    "@types/node": "^15.6.1",
    "chokidar": "^3.5.1",
    "fs-extra": "^10.0.0",
    "globby": "^11.0.3",
    "conventional-changelog-cli": "^2.1.1",
    "enquirer": "^2.3.6",
    "execa": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "typescript": "^4.3.2"
  }
}
